@inject IStringLocalizer<NavMenu> L

<PersonCard
    Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text); margin-bottom:0px!important" MandantId="@MandantId" />
<MudNavMenu>
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Start"]</MudText>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">@L["Home"]</MudNavLink>
    <MudNavLink Href="https://fullstackhero.net/basics/getting-started/" Match="NavLinkMatch.All" Target="_blank"
        Icon="@Icons.Material.Filled.RocketLaunch">@L["Getting Started"]</MudNavLink>
    @if (_canViewHangfire)
    {
        <MudNavLink Href="@_hangfireUrl" Match="NavLinkMatch.All" Target="_blank" Icon="@Icons.Material.Filled.Work">@L["Hangfire"]</MudNavLink>
    }
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Personal"]</MudText>
    @if (_canViewDashboard)
    {
        <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Filled.Dashboard">@L["Dashboard"]</MudNavLink>
    }
    <MudNavLink Href="/account" Icon="@Icons.Filled.ManageAccounts">@L["Account"]</MudNavLink>
    <MudNavLink Href="/audit-logs" Icon="@Icons.Material.Filled.SecurityUpdateGood">@L["Logs"]</MudNavLink>
    <MudNavLink Href="/hotel/reservations/reservationDetail/1/0" Icon="@Icons.Filled.ManageAccounts">@L["ResTest"]</MudNavLink>

    @if (_canViewProducts || _canViewBrands)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Management"]</MudText>
        <MudNavGroup Title="@L["Catalog"]" Expanded Icon="@Icons.Filled.AddBox">
            @if (_canViewProducts)
            {
                <MudNavLink Href="/catalog/products" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Products"]
                </MudNavLink>
            }
            @if (_canViewBrands)
            {
                <MudNavLink Href="/catalog/brands" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Brands"]
                </MudNavLink>
            }
        </MudNavGroup>

        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["HotelManagement"]</MudText>

        <MudNavGroup Title="@L["HotelDefinition"]" Expanded Icon="@Icons.Filled.AddBox">
            @if (_canViewProducts)
            {
                <MudNavLink Href="/hotel/categorys" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Categorys"]
                </MudNavLink>
                <MudNavLink Href="/hotel/rooms" Icon="@Icons.Filled.Room" Class="fsh-nav-child">
                    @L["Rooms"]
                </MudNavLink>
                <MudNavLink Href="/hotel/packages" Icon="@Icons.Filled.GifBox" Class="fsh-nav-child">
                    @L["Packages"]
                </MudNavLink>
                <MudNavLink Href="/accounts/rates" Icon="@Icons.Filled.RateReview" Class="fsh-nav-child">
                    @L["Rates"]
                </MudNavLink>
                <MudNavLink Href="/hotel/priceCats" Icon="@Icons.Filled.Euro" Class="fsh-nav-child">
                    @L["Prices Category Rate"]
                </MudNavLink>
            }
            <MudNavGroup Class="ml-4" Title="@L["Policys"]" Expanded="false" Icon="@Icons.Filled.AddBox">
                @if (_canViewProducts)
                {
                    <MudNavLink Href="/hotel/bookingPolicys" Icon="@Icons.Filled.Book" Class="fsh-nav-child">
                        @L["BookingPolicys"]
                    </MudNavLink>
                    <MudNavLink Href="/hotel/cancellationPolicys" Icon="@Icons.Filled.FreeCancellation" Class="fsh-nav-child">
                        @L["CancellationPolicys"]
                    </MudNavLink>
                }
            </MudNavGroup>

            <MudNavGroup Class="ml-4" Title="@L["Accounting"]" Expanded Icon="@Icons.Filled.AddBox">
                @if (_canViewProducts)
                {
                     <MudNavLink Href="/accounts/items" Icon="@Icons.Filled.LineAxis" Class="fsh-nav-child">
                        @L["Items"]
                    </MudNavLink>

                     <MudNavLink Href="/accounts/itemGroups" Icon="@Icons.Filled.ClearAll" Class="fsh-nav-child">
                        @L["ItemGroups"]
                    </MudNavLink>

                    <MudNavLink Href="/accounts/priceschemas" Icon="@Icons.Filled.PriceChange" Class="fsh-nav-child">
                        @L["PriceSchema"]
                    </MudNavLink>

                    <MudNavLink Href="/accounts/taxes" Icon="@Icons.Filled.MonetizationOn" Class="fsh-nav-child">
                        @L["Taxes"]
                    </MudNavLink>
                }
            </MudNavGroup>

            <MudNavGroup Class="ml-4" Title="@L["Environment"]" Expanded="false" Icon="@Icons.Filled.PanTool">
                @if (_canViewProducts)
                {
                    <MudNavLink Href="/environment/pictures" Icon="@Icons.Filled.Image" Class="fsh-nav-child">
                        @L["Pictures"]
                    </MudNavLink>
                    <MudNavLink Href="/environment/salutations" Icon="@Icons.Filled.Handshake" Class="fsh-nav-child">
                        @L["Salutations"]
                    </MudNavLink>                
                    <MudNavLink Href="/environment/vipStates" Icon="@Icons.Filled.SupervisedUserCircle" Class="fsh-nav-child">
                        @L["VipStates"]
                    </MudNavLink>                
                }
            </MudNavGroup>


        </MudNavGroup>

    }
    @if (CanViewAdministrationGroup)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Administration"]</MudText>
        @if (_canViewUsers)
        {
            <MudNavLink Match="NavLinkMatch.Prefix" Href="/users" Icon="@Icons.Material.Filled.PeopleAlt">@L["Users"]</MudNavLink>
        }
        @if (_canViewRoles)
        {
            <MudNavLink Href="/roles" Icon="@Icons.Material.Filled.EmojiPeople">@L["Roles"]</MudNavLink>
        }
        @if(_canViewTenants)
        {
            <MudNavLink Href="/tenants" Icon="@Icons.Filled.GroupWork" Disabled="!_canViewTenants">@L["Tenants"]</MudNavLink>
        }
        @if (_canViewRoles)
        {
            <MudNavLink Href="/account/mandants" Icon="@Icons.Filled.GroupWork">@L["Mandants"]</MudNavLink>
        }

    }
</MudNavMenu>