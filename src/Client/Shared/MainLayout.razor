@inject Microsoft.Extensions.Localization.IStringLocalizer<MainLayout> _localizer
<MudAppBar Elevation="25">
    
    <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
             <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <img src="full-stack-hero-logo.png" Style="height:30px;" />
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.Xs">
        <MudText Typo="Typo.subtitle1" Class="ml-4">Blazor WebAssembly Boilerplate</MudText>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
        <MudText Typo="Typo.subtitle2">Blazor WebAssembly Boilerplate</MudText>
    </MudHidden>
    <MudSpacer />
    <MudTooltip Text="Toggle Dark Mode">
        <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="@((e) => ToggleDarkMode())" />
    </MudTooltip>
    <MudMenu Icon="@Icons.Material.Outlined.Translate" Color="Color.Inherit" Direction="Direction.Bottom" OffsetY="true" Dense="false">
        <MudMenuItem>English</MudMenuItem>
        <MudMenuItem>Swedish</MudMenuItem>
        <MudMenuItem>Old Norse</MudMenuItem>
    </MudMenu>
    <MudMenu Direction="Direction.Left" OffsetX="true" Dense="false">
        <ActivatorContent>
            <MudAvatar Image="https://avatars.githubusercontent.com/u/31455818?v=4" />
        </ActivatorContent>
        <ChildContent>
            <PersonCard Class="mt-n2" />
            <MudDivider Class="mb-2" />
            <MudListItem Text="Account" Icon="@Icons.Material.Outlined.Person" Href="/personal/account" />
            <MudListItem Text="Logout" Icon="@Icons.Material.Outlined.Login" OnClick="Logout" />
        </ChildContent>
    </MudMenu>
</MudAppBar>
<MudDrawer @bind-Open="_drawerOpen" Elevation="25" ClipMode="DrawerClipMode.Never" Style="z-index:2000;">
    <NavMenu />
</MudDrawer>
<MudMainContent>
    <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
        @ChildContent
        <MudScrollToTop TopOffset="400" Style="z-index:2000;">
            <MudFab Icon="@Icons.Material.Filled.KeyboardArrowUp" Color="Color.Primary" />
        </MudScrollToTop>
    </MudContainer>
</MudMainContent>