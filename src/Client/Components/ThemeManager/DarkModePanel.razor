<MudExpansionPanel HideIcon="true">
    <TitleContent>
        <div class="d-flex" style="align-items: center;">
                 @if (IsDarkMode) { <MudText Class="mt-1">Light Mode</MudText>}
                 else { <MudText Class="mt-1">Dark Mode</MudText>}
            <MudToggleIconButton @bind-Toggled="IsDarkMode" Icon="@Icons.Material.Filled.WbSunny" Color="@Color.Warning"
                Title="Off" Class="d-flex ml-auto" ToggledIcon="@Icons.Material.Filled.DarkMode"
                ToggledColor="@Color.Surface" ToggledTitle="On" style="left:8px!important" @onclick="@ToggleDarkMode" />
        </div>
    </TitleContent>
</MudExpansionPanel>