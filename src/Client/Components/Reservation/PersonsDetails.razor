            res.CartId = null;
            res.Confirmations = null;

            if (person.PersonId != 0)
            {
                res.GuestId = person.PersonId;
                reservationDto.PersonShopItems.Remove(person);
                reservationDto.Persons = JsonSerializer.Serialize(reservationDto.PersonShopItems.ToList());


            }
            else
