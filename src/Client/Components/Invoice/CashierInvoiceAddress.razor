@using FSH.BlazorWebAssembly.Client.Components.Cashier;
@inject IStringLocalizer<CashierInvoiceAddress> L


<MudCard>
    <MudCardHeader Class="pb-2">
        <CardHeaderContent>
            <MudStack Row="true" AlignItems="AlignItems.Center">
                <MudIcon Icon="@Icons.Material.Filled.Article" Title="Favorite" />
                <MudText Typo="Typo.h6">@L["Invoice Address"]</MudText>
            </MudStack>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent Class="pa-2">

        <MudGrid>

            <MudItem xs="12">
                <MudTextField @bind-Value="@invoiceAddress.Name1" Label="@L["Name"]" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="@invoiceAddress.Name2" Label="@L["Name"]" Variant="Variant.Outlined" />
            </MudItem>
            @if (invoiceAddress.ContactName is not null)
            {
                <MudItem xs="12">
                    <MudTextField @bind-Value="@invoiceAddress.ContactName" Label="@L["ContactName"]" Variant="Variant.Outlined" />
                </MudItem>
            }
            <MudItem xs="12">
                <MudTextField @bind-Value="@invoiceAddress.Address1" Label="@L["Address1"]" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="@invoiceAddress.Address2" Label="@L["Address2"]" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="2">
                <MudTextField @bind-Value="@invoiceAddress.Country" Label="@L["Country"]" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="2">
                <MudTextField @bind-Value="@invoiceAddress.ZipCode" Label="@L["Zip"]" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="8">
                <MudTextField @bind-Value="@invoiceAddress.City" Label="@L["City"]" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="3" Class="mt-3">
                <MudCheckBox Label="@L["Send Email"]" @bind-Checked="@invoiceAddress.SendEmail" />
            </MudItem>
            <MudItem xs="9">
                <MudTextField @bind-Value="@invoiceAddress.Email" Label="@L["Email"]" Variant="Variant.Outlined" />
            </MudItem>

        </MudGrid>

    </MudCardContent>

</MudCard>


@code {
    [Parameter]
    public InvoiceAddress invoiceAddress { get; set; }

    // private InvoiceAddress model { get; set; } = new InvoiceAddress();

}

